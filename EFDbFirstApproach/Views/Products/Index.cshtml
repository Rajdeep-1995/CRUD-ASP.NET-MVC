@model List<EFDbFirstApproach.Models.Product>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h2>Products</h2>
<a href="/products/create">Create Product</a>
<form class="form-check-inline" action="/products/index">
    <lable>Search</lable>
    <input type="search" class="form-control" name="search" id="search" placeholder="Search..." value=@ViewBag.search />
    <button type="submit" class="btn btn-primary">GO</button>
</form>

<table class="table">
    <tr>
        <th>Product Id</th>
        <th>Product Name</th>
        <th>Price</th>
        <th>Date of purchase</th>
        <th>Availability</th>
        <th>Category Id</th>
        <th>Barnd Id</th>
        <th>Active</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ProductID</td>
            <td>@item.ProductName</td>
            <td>@item.Price.Value.ToString("C")</td>
            <td>@item.DateOfPurchase.Value.ToString("dd/MM/yyyy")</td>
            <td>@item.AvailabilityStatus</td>
            <td>@item.CategoryID</td>
            <td>@item.BrandID</td>
            <td>@item.Active</td>
            <td>
                <a href="/products/details/@item.ProductID">Details</a>
                <a href="/products/edit/@item.ProductID">Edit</a>
                <a href="/products/delete/@item.ProductID">Delete</a>
            </td>
        </tr>

    }
</table>